@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<RoskildeProject.Models.Item>

@{
    ViewData["Title"] = "Search";
    Layout = "_LayoutContent";
}

<div id="filterbox" class="col-md-3"></div>

<div class="col-md-9 panel">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Forside</a></li>
        <li class="active">Søgning: <a href="@Url.Action("Search", "Items", new {id = ViewBag.Search})">@ViewBag.Search</a></li>
    </ol>
    <ul class="nav nav-tabs custom">
        <li role="presentation" class=""><a href="#">Alle</a></li>
        <li role="presentation"><a href="#">Private</a></li>
        <li role="presentation"><a href="#">Virksomheder</a></li>
    </ul>
    <hr />
    <div class="panel-body">
        @await Html.PartialAsync("_ItemList")
        <div id="search-box"></div>
        <div id="search-item"></div>
    </div>
</div>

<script type="text/javascript" src="~/search-bundle.js" charset="utf-8"></script>