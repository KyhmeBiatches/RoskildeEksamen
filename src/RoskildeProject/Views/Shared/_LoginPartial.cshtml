@using Microsoft.AspNetCore.Identity
@using RoskildeProject.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Items" asp-action="Create">Opret Annoce</a></li>
            <li>
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Manage">
                    Min Profil
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log ud</button>
            </li>
        </ul>



    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Items" asp-action="Create" class="navbar-orange-text">Opret Annoce</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="navbar-orange-text">Ny bruger</a></li>
